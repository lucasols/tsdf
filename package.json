{
  "name": "tsdf",
  "version": "11.1.1",
  "description": "A data fetching solution based on t-state",
  "license": "MIT",
  "author": "Lucas Santos",
  "repository": "github:lucasols/tsdf",
  "type": "module",
  "main": "./dist/main.cjs",
  "module": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "require": "./dist/main.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "test": "vitest --ui --mode development",
    "test:changed": "vitest --changed --ui --mode development",
    "lint": "pnpm tsc && pnpm eslint && pnpm format",
    "eslint": "CI=true eslint --color --ext .jsx,.js,.ts,.tsx src/ test/",
    "format": "prettier --write src/**/*.ts",
    "tsc": "tsc -p tsconfig.prod.json",
    "tsc:watch": "tsc -p tsconfig.prod.json --watch",
    "test:run": "vitest run",
    "build": "pnpm test:run && pnpm lint && pnpm build:no-test",
    "build:no-test": "tsup --dts",
    "npm-publish": "./scripts/check-if-is-sync.sh && pnpm build && npm publish"
  },
  "devDependencies": {
    "@lucasols/eslint-plugin-extended-lint": "^0.1.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "@vitest/ui": "0.27.1",
    "eslint": "^8.31.0",
    "eslint-plugin-local-rules": "^1.3.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-vitest": "^0.0.29",
    "happy-dom": "^8.1.4",
    "jsdom": "^21.0.0",
    "prettier": "^2.8.2",
    "pretty-format": "^29.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tiny-glob": "^0.2.9",
    "tsm": "^2.3.0",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4",
    "vite": "^4.0.4",
    "vitest": "^0.29.3"
  },
  "dependencies": {
    "immer": "^9.0.17",
    "klona": "^2.0.6",
    "mitt": "^3.0.0",
    "t-state": "^8.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
