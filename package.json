{
  "name": "tsdf",
  "version": "15.1.0",
  "description": "A data fetching solution based on t-state",
  "license": "MIT",
  "author": "Lucas Santos",
  "repository": "github:lucasols/tsdf",
  "type": "module",
  "main": "./dist/main.cjs",
  "module": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "require": "./dist/main.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "test": "vitest --ui --mode development",
    "test:changed": "vitest --changed --ui --mode development",
    "lint": "pnpm tsc && pnpm eslint && pnpm format",
    "eslint": "CI=true eslint --color --ext .jsx,.js,.ts,.tsx src/ test/",
    "format": "prettier --write src/**/*.ts",
    "tsc": "tsc -p tsconfig.prod.json",
    "tsc:watch": "tsc -p tsconfig.prod.json --watch",
    "test:run": "vitest run",
    "build": "pnpm test:run && pnpm lint && pnpm build:no-test",
    "build:no-test": "tsup --dts",
    "pre-publish": "./scripts/check-if-is-sync.sh && pnpm build"
  },
  "devDependencies": {
    "@lucasols/eslint-plugin-extended-lint": "^1.4.0",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^20.8.4",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "@vitest/ui": "1.0.4",
    "eslint": "^8.51.0",
    "eslint-plugin-local-rules": "^2.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-vitest": "^0.3.15",
    "happy-dom": "^12.9.1",
    "jsdom": "^22.1.0",
    "prettier": "^3.0.3",
    "pretty-format": "^29.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tiny-glob": "^0.2.9",
    "tsm": "^2.3.0",
    "tsup": "^7.2.0",
    "typescript": "^5.4.2",
    "vite": "^5.1.5",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "evtmitter": "^0.3.3",
    "immer": "^10.0.3",
    "klona": "^2.0.6",
    "t-state": "^9.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
